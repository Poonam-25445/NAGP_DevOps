<?xml version="1.0" encoding="UTF-8"?>
<!-- Do not include the "DOCTYPE" tag as the grammar does not let you use beanshell script -->
<suite name="Suite" thread-count="8" data-provider-thread-count="1" parallel="classes">
	<listeners>
		<listener class-name="com.nagp.listeners.TestNGListeners" />
	</listeners>
	<test name="UIAutomationTestCase">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="webdriverHost" value="LOCALHOST"></parameter>
		<parameter name="webdriverPort" value="4444"></parameter>
		<parameter name="platform" value="WINDOWS" />

		<!-- To run testngGroup on your local machine, you need to add a custom group name on the intended test case and update the same name in the script tag below.
	For example:  for a test case add a custom group name "myTest":	@Test(dataProvider = "TestData", dataProviderClass = DataProviders.class, groups = { Severity.SMOKE , "myTest"})
	update the same in <script>: <script language="beanshell"><![CDATA[(groups.containsKey("myTest"))]]></script>
	
	The <method-selectors> will ensure only the tests decorated with the mentioned group are executed -->
		<method-selectors>
			<method-selector>
				<script language="beanshell">
					<![CDATA[(groups.containsKey("Critical"))]]>
				</script>
			</method-selector>
		</method-selectors>
		<classes>
			<class name="com.nagarro.nagp.VerifySearchItemFunctionality" />
			<class name="com.nagarro.nagp.VerifyNewCustomerFunctionality" />
			<class name="com.nagarro.nagp.VerifyLoginFunctionality" />
		</classes>

	</test>
</suite><!-- Suite -->